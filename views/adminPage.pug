doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible" content="IE=edge")
        meta(name="viewport" content="width=device-width, initial-scale=1.0")
        title Admin Page
        link(rel="stylesheet" type="text/css" href="/styles.css")
    body
        header(id="formatHeader")
            div(id="space")            
            h1.main-title Admin
            label(for="burger-checkbox")
                img(src="/assets/rick.png" id="burger" alt="burguer icon")
        input(type="checkbox" id="burger-checkbox")
        nav
            ul
                li 
                    a(href="/admin/createmovie") Create Movie
                li 
                    a(href="/logout") < Log out
        main
            section(class="movies-found")
                if adminMovies
                        each movie in adminMovies
                            article 
                                a(href=`/search/${movie.movieId}`)
                                    img(src=`${movie.Poster}`)
                                    p.movie-title= movie.Title
                                button(onclick=`window.location.href='/admin/editmovie/${movie.movieId}'`) Edit 
                                button(onclick=`deleteMovieButton('/admin/removemovie/${movie.movieId}')`) Remove
    script(src="/scripts.js")