doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible" content="IE=edge")
        meta(name="viewport" content="width=device-width, initial-scale=1.0")
        title Browser
        link(rel="stylesheet" type="text/css" href="/styles.css")
    body
        header(id="formatHeader")
            div(id="space")            
            h1.main-title Browser
            label(for="burger-checkbox")
                img(src="/assets/morty.png" id="burger" alt="burguer icon")
        input(type="checkbox" id="burger-checkbox")
        nav
            ul
                li 
                    a(href="/u/movies/") Manage Your Movies
                li 
                    a(href="/u/restorepassword") Change Password
                li 
                    a(href="/about") About FS Movies+
                li 
                    a(href="/") < Log out
        main
            form(action="/u/search" method="get" class="search-form")
                img(src="/assets/search-icon.svg" alt="search" class="search-icon")
                input(type="text" class="search-input hidden" name="search")
            if message
                h2.search-title #{message}
            if movies
                h2.search-title Results for #{search}
                section(class="movies-found")
                    if movies
                        each movie in movies
                            article 
                                a(href=`/u/search/${movie.id}`)
                                    img(src=`${movie.img}`)
                                    p.movie-title= movie.title
    script(src="/scripts.js")  