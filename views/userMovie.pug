doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible" content="IE=edge")
        meta(name="viewport" content="width=device-width, initial-scale=1.0")
        title #{movie.title}
        link(rel="icon" type="image/x-icon" href="/assets/palomitas.png")
        link(rel="stylesheet" type="text/css" href="/styles.css")
    body
        header(id="formatHeader")
            button(type="button", onclick="history.back()") &#8678
            h1.main-title Browser
            div(id="space2") 
            input#toggle(type='checkbox')
            label.hamburger(for='toggle')
                div.top-bun
                div.meat
                div.bottom-bun

            .nav
                .nav-wrapper
                    nav
                        a(href="/u/movies") Your Movies
                        br
                        a(href="/u/search") Browser
                        br
                        a(href="/u/restorepassword") Change Password
                        br
                        a(href="/u/about") About FS Movies+
                        br
                        a(href="/logout") < Log out
        main(class="columnFormat") 
            img(src=`${movie.img}` alt="" srcset="" id="renderPoster")
            button(type="button" id="saveFav") Save Favourite
            div(id="alignleft")
                h2.movie-details(id=movie.id) #{movie.year} - #{movie.title} - #{movie.runtime}
                p Rating: #{movie.rating}
                p Genres: #{movie.genre}
                p #{movie.plot}
                p Directors: #{movie.director}
                p Writers: #{movie.writer}
                p Actors: #{movie.actors}
                if critics
                    h3 Reviews:
                    each critic in critics 
                        p #{critic}
                if specialReview
                    h3 Special user review:
                    p #{specialReview}
    script(src="/scripts.js")