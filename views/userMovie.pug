doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        title #{movie.title}
        link(rel="stylesheet", type="text/css", href="/styles.css")
    body
        header(id="formatHeader")
            button(type="button", onclick="history.back()") &#8678
            h1.main-title Your Selection
            label(for="burger-checkbox")
                img(src="/assets/morty.png" id="burger" alt="burguer icon")
        input(type="checkbox" id="burger-checkbox")
        nav
            ul
                li 
                    a(href="/u/search") Browser
                li 
                    a(href="/u/restorepassword") Change Password
                li 
                    a(href="/about") About FS Movies+
                li 
                    a(href="/logout") < Log out
        main
            img(src=`${movie.img}`, alt="", srcset="")
            button#saveFav Save Favourite
            h2.movie-details(id=movie.id) #{movie.year} - #{movie.title} - #{movie.runtime}
            p Rating: #{movie.id}
            p Genres: #{movie.genre}
            p #{movie.plot}
            p Directors: #{movie.director}
            p Writers: #{movie.writer}
            p Actors: #{movie.actors}
    script(src="/scripts.js")