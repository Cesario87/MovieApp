doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible" content="IE=edge")
        meta(name="viewport" content="width=device-width, initial-scale=1.0")
        title Restore Password
        link(rel="icon" type="image/x-icon" href="/assets/palomitas.png")
        link(rel="stylesheet" type="text/css" href="/styles.css")
    body
        header(id="formatHeader")
            button(type="button", onclick="history.back()") &#8678
            h1.main-title Browser
            div(id="space2") 
            input#toggle(type='checkbox')
            label.hamburger(for='toggle')
                div.top-bun
                div.meat
                div.bottom-bun
            .nav
                .nav-wrapper
                    nav
                        a(href="/u/search") Browser
                        br
                        a(href="/u/movies/") Your Movies
                        br
                        a(href="/u/about") About FS Movies+
                        br
                        a(href="/logout") < Log out
        main(class="columnFormat" id="generalFormat")                 
            p Please, enter your current password and a new one:
            form(action="/u/restorepassword" method="post" class="loginForm")
                input(type="password" name="password" placeholder="Current Password")
                input(type="password" name="newPassword" placeholder="New password")
                input(type="password" name="newPasswordCheck" placeholder="Repeat new password")
                input(type="submit" value="Change password")


    script(src="/scripts.js") 